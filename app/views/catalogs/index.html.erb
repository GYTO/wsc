<div class="columns">
  <% @catalogs.each do |c| %>
    <div class="column is-one-third">
      <div class="card">
        <div class="card-image">
          <figure class="image is-4by3">
          <%= link_to (image_tag "#{c.image}/1280x960", alt: c.name), catalog_path(c) %>
          </figure>
        </div>
        <div class="card-content">
          <div class="media-content">
            <h2 class="title is-4"><%= c.name %></h2>
          </div>
          <div class="content">
            <%= truncate(c.description, :length => 80) %>
          </div>
        </div>
        <footer class="card-footer">
          <%= link_to 'View Product', catalog_path(c), class: 'card-footer-item' %>
        </footer>
      </div>
    </div>
  <% end %>
</div>